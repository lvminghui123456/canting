/**index.wxss**/

page {
  height: 100%;
}
#container{
  width: 100%;
  height: 100%;
}
#list-container{
  margin: 0;
  padding: 0;
  overflow: hidden;
}
.fixed{
  position: fixed;
  top: 0;
  left: 0;
}
.address {
  width: 100%;
  display: flex;
  background: #fff;
  overflow: hidden;
}

.address_adr {
  flex: 1;
  margin: 10rpx 10rpx 10rpx 20rpx;
  border-right: 1px solid #eee;
}

.to {
  font-size: 28rpx;
  padding: 10rpx 10rpx 5rpx 20rpx;
}

.bo {
  font-size: 24rpx;
  color: #777;
  padding: 10rpx 10rpx 5rpx 20rpx;
}

.address_mem {
  width: 150rpx;
  font-size: 28rpx;
  margin: 10rpx 10rpx 10rpx 20rpx;
}

.address_img {
  width: 80rpx;
  height: 80rpx;
  margin-left: 15rpx;
}

.address_mem image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

.slide-image {
  width: 100%;
  height: 100%;
}

/*goods*/

.goodswrap {
  width: 100%;
  height: 100%;
  display: flex;
  overflow: hidden;
  flex-direction: row;
  background: #eee;
}

.goodswrap .menu {
  width: 130rpx;
  font-size: 30rpx;
  color: #666;
  overflow-y: auto;
  overflow-x: hidden;
  text-align: center;
  /* padding-bottom: 120rpx; */
}
.goodswrap .goodLeft{
  width: 130rpx;
}

.goodswrap .menu .menu-item {
  line-height: 40rpx;
  padding: 38rpx 25rpx;
  background: #fff;
  position: relative;
  color: #333;
}

.goodswrap .menu .menu-item.selected {
  background: #eee;
  
  border-left: 8rpx solid #FCC516;
  color: #FCC516;
}

.goodswrap .menu .menu-item image {
  width: 70rpx;
  height: 70rpx;
  display: none;
}

.goodswrap .menu .menu-item.selected image {
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
}

.goodswrap .menu .menu-item:after {
  content: "";
  display: inline-block;
  width: 100%;
  height: 2rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #eee;
  transform: scaleY(0.5);
}

.goodswrap .menu .menu-item:last-child {
  border-bottom: none;
}

.goodswrap .goods {
  flex: 1;
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  position: relative;
}

.goodswrap .goods:after {
  content: "";
  display: inline-block;
  width: 1px;
  height: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #eee;
  transform: scaleX(0.5);
}

.goodswrap .goods .typename {
  display: block;
  line-height: 2.7em;
  padding: 0 0.7em;
  color: #333;
  font-size: 0.85em;
  background: #f4f5f7;
  position: relative;
}

.goodswrap .goods .typename:after {
  content: "";
  width: 0.15em;
  height: 100%;
  display: inline-block;
  background: #1bab43;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
}

.goodswrap .goods .good-box {
  padding: 0rpx 20rpx 0rpx 20rpx;
  overflow: hidden;
}

.goodswrap .goods .card {
  height: 310rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  /* border: 1rpx solid #ccc; */
  box-shadow: 3rpx 3rpx 2rpx #888;
  position: relative;
  background: #fff;
  overflow: hidden;
  padding: 10rpx;
}
.goodswrap .goods .card .desc .priceact{
  position: relative;
}
/* .goodswrap .goods .card .desc .priceact  */
.add-card{
  position: absolute;
  bottom: 40rpx;
  right: 10rpx;
  background: #FCC516;
  width:120rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 5rpx;
  text-align: center;
  font-size: 24rpx;
}
.add-card1{
  position: absolute;
  bottom: 40rpx;
  right: 10rpx;
  background: #ccc;
  width:120rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 5rpx;
  text-align: center;
  font-size: 24rpx;
  color:#fff;
}

.goodswrap .goods .good {
  height: 310rpx;
  margin-top: 20rpx;
  border-radius: 20rpx;
  /* border: 1rpx solid #ccc; */
  box-shadow: 3rpx 3rpx 2rpx #888;
  position: relative;
  background: #fff;
  overflow: hidden;
  padding: 10rpx;
}

.goodswrap .goods .good:after {
  content: "";
  display: inline-block;
  width: 100%;
  height: 1px;
  position: absolute;
  bottom: 0;
  left: 0;
  background: #eee;
  transform: scaleY(0.5);
}

.goodswrap .goods .good .title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 60rpx;
  height: 60rpx;
  color: #333;
  text-align: right;
}

.goodswrap .goods .good .desc {
  display: flex;
}

.goodswrap .goods .good .desc image {
  width: 250rpx;
  height: 250rpx;
  display: inline-block;
  margin-right: 20rpx;
}

.goodswrap .goods .good .desc .priceact {
  flex: 1;
  font-size: 28rpx;
  line-height: 30rpx;
  text-align: right;
}

.goodswrap .goods .good .desc .priceact .price {
  font-size:40rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #000;
  font-weight: 400;
  text-align: right;
  
}

.goodswrap .goods .good .desc .priceact .price label {
  font-size: 1em;
}

.goodswrap .goods .good .desc .priceact image {
  width: 34rpx;
  height: 34rpx;
  margin-right: 0rpx;
}

.goodswrap .goods .good .desc .priceact .operation {
  display: flex;
}

.goodswrap .goods .good .desc .priceact .operation .operation-left {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  letter-spacing:8rpx;
}

.goodswrap .goods .good .desc .priceact .operation .operation-right {
  width: 150rpx;
  height: 60rpx;
  text-align: left;
  font-size: 30rpx;
  /* display: flex;
  align-items: center; */
}
.goodswrap .goods .good .desc .priceact .operation .operation-right .xiangbian{
  float: left;
  display: flex;
  align-items: center;
  margin: 0;
  padding: 0;
  border: 1px solid #FFC838;
  border-radius: 30rpx;
}
.xiangbian{
  float: left;
  display: flex;
  align-items: center;
  margin: 0;
  padding: 0;
  border: 1px solid #FFC838;
  border-radius: 30rpx;
}
.goodswrap .goods .good .desc .priceact .operation .operation-right navigator {
  display: flex;
  align-items: center;
}

.goodswrap .goods .good .desc .priceact .operation .operation-right .num-view {
  margin: 0;
  padding: 0 10rpx 0 6rpx;
}

/* modal */

.modal-box {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  height: 80%;
  margin: 10% auto;
  padding: 10rpx;
  overflow: hidden;
  border-radius: 10rpx;
  background: rgb(255, 255, 255);
}

.modal-content .image-detail {
  border: 1rpx solid #ccc;
  height: 40%;
}

.modal-content .image-detail image {
  width: 100%;
  height: 100%;
}

.modal-content .text-detail {
  height: 40%;
  margin-top: 10%;
  font-size: 24rpx;
}

.modal-content .text-detail .text-title {
  color: #FCC516;
  font-size: 26rpx;
  line-height: 50rpx;
  font-weight: 600;
}

