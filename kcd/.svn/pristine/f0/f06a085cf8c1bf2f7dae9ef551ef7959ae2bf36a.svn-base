/* pages/person/person.wxss */
.person-header{
  text-align: center;
  padding: 40rpx;
}
.person-header .avatar{
  width: 150rpx;
  height: 150rpx;
  display: inline-block;
  overflow: hidden;
  border-radius: 50%;
}
.person-header .name{
  line-height: 50rpx;
  font-size: 30rpx;
  color: #888888;
}

.person-con{
  padding: 0 40rpx;
  font-size: 30rpx;
  color: #888888;
}
.infor{
  display: flex;
  border: 3rpx solid #aaa;
  border-radius: 10rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 20rpx 20rpx;
  margin-top: 20rpx;
}
.infor .infor-left{
  display: inline-block;
  width: 80rpx;
  border-right: 2rpx solid #aaa;
}
.infor .infor-right{
  display: inline-block;
  padding: 0 20rpx;
  flex: 1;
}

.person-bottom{
  padding: 0 40rpx;
  margin-top: 60rpx;
}
.person-bottom button{
  background: #9B9B9B;
  border: none;
  color: #fff;
  font-size: 30rpx;
  line-height: 90rpx;
}