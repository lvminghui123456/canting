.container{
  width:100%;
  height: 100%;
}
.container .top-box{
  padding-bottom: 170rpx;
}
.container .top-box .goods-list{
  border: 1rpx solid #ccc;
}
.container .top-box .goods-list .title{
  font-size: 30rpx;
  text-indent: 30rpx;
  font-weight: 600;
  line-height: 60rpx;
  height: 60rpx;
}
.container .top-box .goods-list .title .title-right{
  float: right;
  margin-right: 30rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}
.container .top-box .goods-list .title .title-right image{
  width: 26rpx;
  height: 26rpx;
  margin-left: 6rpx;
}
.swiper-container{
  height: 400rpx;
}
.swiper-container swiper-item{
  text-align: center;
}
.swiper-container swiper-item image{
  height: 300rpx;
  width: 300rpx;
}
.swiper-container swiper-item .image-text{
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 26rpx;
}

/* botton */
.container .bottom-box{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 160rpx;
  width: 100%;
  background: #fff;
}
.container .bottom-box .unit-price{
  height: 80rpx;
  width: 100%;
  overflow: hidden;
}
.container .bottom-box .unit-price .unit-container{
  width: 500rpx;
  height: 100%;
  margin: 0 auto;
  border: 1rpx solid #666;
  border-bottom: 0;
  border-radius: 10rpx 10rpx 0 0;
  line-height: 80rpx;
  font-size: 32rpx;
}
.container .bottom-box .unit-price .unit-container .unit-left{
  border-right: 1px solid #666;
  float: left;
  width: 50%;
  box-sizing: border-box;
  text-align: center;
}
.container .bottom-box .unit-price .unit-container .unit-right{
  float: left;
  width: 50%;
  text-align: center;
}
.container .bottom-box .unit-price .unit-container .unit-right .num-view{
  padding: 0 20rpx;
}
.container .bottom-box .unit-price .unit-container .unit-right image{
  width: 30rpx;
  height: 30rpx;
}
.container .bottom-box .total-price{
  height: 80rpx;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: left;
  width: 100%;
  background: #1A1A1A;
  color:#FFE94B;
  
}
.container .bottom-box .total-price .total-left{
  float: left;
  width: 50%;
  height: 80rpx;
  box-sizing: border-box;
  text-indent: 30rpx;
}
.container .bottom-box .total-price .total-right{
  float: left;
  width: 50%;
  height: 80rpx;
  box-sizing: border-box;
  font-weight: 500;
  
}
.container .bottom-box .total-price .total-right .right-container{
  height: 100%;
  text-align: right;
  float: right;
  display: flex;
  align-items: center;
}
.container .bottom-box .total-price .total-right .right-container image{
  width: 26rpx;
  height: 26rpx;
  margin-right:30rpx;
  margin-left:6rpx;
}