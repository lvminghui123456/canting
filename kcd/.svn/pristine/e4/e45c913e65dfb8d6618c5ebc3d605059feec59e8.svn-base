/* pages/orderdetail/orderdetail.wxss */
.container{
  width:100%;
  height: 100%;
   background: #eee;
}
page{
  width:100%;
  height: 100%;
   background: #eee;
}
/* 地址 */
.address {
  width: 100%;
  display: flex;
  background: #fff;
  border-bottom: 1px solid #eee;
   border-top: 1px solid #eee;
}

.address_adr {
  flex: 1;
  margin: 10rpx 10rpx 10rpx 20rpx;
  /* border-right: 1px solid #eee; */
}

.to {
  font-size: 32rpx;
  font-weight: 600;
  padding: 10rpx 10rpx 5rpx 20rpx;
}

.bo {
  font-size: 28rpx;
  color: #777;
  padding: 10rpx 10rpx 5rpx 20rpx;
}

.address_mem {
  width: 150rpx;
  font-size: 28rpx;
  margin: 10rpx 10rpx 10rpx 20rpx;
  text-align: right;
}

.address_img {
  width: 50rpx;
  height: 50rpx;
  float: right;
  margin-top: 30rpx;
}

.address_mem image {
  width: 100%;
  height: 100%;
  vertical-align: middle;
}

.jcfs {
  width: 100%;
  height: 80rpx;
  background: #fff;
  font-size: 32rpx;
  font-weight: 600;
  line-height: 80rpx;
  text-indent: 35rpx;
}
.good-list{
  width:100%;
  margin-top:15rpx;
  background: #fff;
  border-bottom:1px solid #ccc;
}
.good{
  width:92.5%;
  margin:0 auto;
}
.good-name{
  line-height: 100rpx;
  display: flex;
  width: 100%;
  font-size:32rpx;
  font-weight: 600;
}
.name-left{
  flex:3;
  font-weight: 500
}
.name-center{
  flex:1;
  text-align: center;
  
}
.name-right{
  flex:1;
  text-align: right
}
.good-detail{
  line-height: 50rpx;
  font-size: 26rpx;
  color:#999;
  font-weight: 300;
}
.good-total{
  width:100%;
  height: 80rpx;
  line-height: 80rpx;
  background: #fff;
  font-size:32rpx;
  font-weight: 600;
}
.total-left{
  float: left;
  text-indent: 35rpx;
  font-weight: 600;
  font-size:32rpx;
}
.total-right{
  float: right;
  margin-right:25rpx;
}
.order{
  width:100%;
  background:#fff;
  margin-top:20rpx;
}
.order-list{
  width:100%;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom:1px solid #eee;
}
.order-left{
   float: left;
   text-indent: 35rpx;
   font-size:30rpx;
   font-weight: 600;
}
.order-right{
   float: right;
    margin-right:25rpx;
    font-weight: 300;
    font-size:28rpx;
}
.but{
  width:350rpx;
  height: 70rpx;
  line-height: 70rpx;
  background:#FCC516;
  border-radius: 10rpx;
  text-align: center;
  margin:0 auto;
  margin-top:60rpx;
  margin-bottom:60rpx;
}