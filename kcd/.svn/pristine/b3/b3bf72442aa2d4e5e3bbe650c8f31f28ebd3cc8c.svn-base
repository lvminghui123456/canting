/* pages/card/card.wxss */
page{
  background: #F0EFF4;
}
.card-list{
  width: 100%;
  padding-bottom: 110rpx;
}
.card-con{
  width: 670rpx;
  padding: 40rpx 0;
  margin: 0 auto;
  border-bottom: 1px dashed #ccc;
}
.card{
  height: 370rpx;
  width: 100%;
  background: #fff;
  display: flex;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
}
.card-left{
  height: 100%;
  width: 30rpx;
}
.card-left image{
  height: 100%;
  width: 100%;
}

.card-right{
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  padding: 50rpx 0rpx 30rpx 30rpx;
}
.card-right .title{
  width: 420rpx;
  font-size: 34rpx;
  line-height: 50rpx;
  font-weight: 800;
  height: 180rpx;
  overflow: hidden;
}
.card-right .detail{
  overflow: hidden;
  margin-top: 50rpx;
}
.card-right .detail view{
  float: left;
  font-size: 30rpx;
  line-height: 36rpx;
  border-bottom: 1px solid #555;
}

.price{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 0;
  right: 0;
  background: #EE3B25;
  border-radius: 50% 0 50% 50%;
  color: #fff;
}
.price .price-box{
  width: 200rpx;
  height: 120rpx;
  position: absolute;
  right: 0;
  top: 0;
  display: flex;
}
.price .price-left{
  flex: 1;
  line-height: 120rpx;
  font-size: 40rpx;
  text-align: right;
  float: right;
}
.price .price-right{
  width: 24rpx;
  font-size: 20rpx;
  line-height: 24rpx;
  box-sizing: border-box;
  padding-top: 36rpx;
  float: right;
}




.bottom{
  width: 100%;
  height: 100rpx;
  background: #fff;
  line-height: 100rpx;
  display: flex;
  border-top: 1px solid #ccc;
  position: fixed;
  bottom: 0;
  left: 0;
}


.bottom  .jifen{
  font-size: 28rpx;
  font-weight: 700;
  text-indent: 40rpx;
  flex: 1;
  height: 100%;
  line-height: 100rpx;
}
.bottom  .jifen text{
  font-size: 34rpx;
  color:#A72C33;
  padding-right: 10rpx;
}
.bottom  .mine{
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  font-size: 34rpx;
  text-align: right;
  box-sizing: border-box;
  padding-right: 40rpx;
  display: flex;
  align-items: center;
}
.bottom  .mine .box{
  height: 100%;
  flex: 1;
}
.bottom  .mine image{
  width: 40rpx;
  height: 40rpx;
}
.bottom .mine .touxiang{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
  line-height: 0;
  display: inline-block;
  margin: 0;
  padding: 0;
  margin-right: 10rpx;
}