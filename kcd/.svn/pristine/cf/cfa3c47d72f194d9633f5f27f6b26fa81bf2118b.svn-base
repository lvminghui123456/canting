.card-list{
  width: 100%;
}
.card-con{
  width: 670rpx;
  padding: 40rpx 0;
  margin: 0 auto;
  
}
.card{
  height: 370rpx;
  width: 100%;
  background: #fff;
  display: flex;
  border-radius: 10rpx;
  position: relative;
  overflow: hidden;
  border: 1px solid #ccc;
  border-left: none;
}
.card-left{
  height: 100%;
  width: 30rpx;
}
.card-left image{
  height: 100%;
  width: 100%;
}

.card-right{
  flex: 1;
  height: 100%;
  box-sizing: border-box;
  padding: 50rpx 0rpx 30rpx 30rpx;
}
.card-right .title{
  width: 420rpx;
  font-size: 34rpx;
  line-height: 50rpx;
  font-weight: 800;
  height: 180rpx;
  overflow: hidden;
}


.price{
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 0;
  right: 0;
  background: #EE3B25;
  border-radius: 50% 0 50% 50%;
  color: #fff;
  display: flex;
}
.price .price-left{
  width: 90rpx;
  line-height: 120rpx;
  font-size: 48rpx;
  text-align: center;
}
.price .price-right{
  flex: 1;
  font-size: 20rpx;
  line-height: 24rpx;
  box-sizing: border-box;
  padding-top: 36rpx;
}



.text-list{
  padding: 40rpx 40rpx 100rpx 40rpx;
  font-size: 28rpx;
  line-height: 45rpx;
}
.text-list .text-con{
  display: flex;
  padding: 30rpx 0;
}
.text-list .text-con .text-left{
  width: 200rpx;
  color: #8D8D8D;
}
.text-list .text-con .text-right{
  flex: 1;
  color: #000;
}


.button-con{
  position: fixed;
  width: 100%;
  height: 100rpx;
  bottom: 0;
  left: 0;
  box-sizing: border-box;
  padding: 0 40rpx;
  background: #fff;
}
.button-con button{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 34rpx;
  background: #FEC425;
  color: #fff;
}