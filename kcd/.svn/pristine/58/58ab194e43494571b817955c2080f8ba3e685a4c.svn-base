.container{
  width:100%;
  height: 100%;
}
/* search */
.search-box{
  display: flex;
  height: 50rpx;
  line-height: 50rpx;
  padding: 10rpx 20rpx 20rpx 0;
}
.search-box .return{
  width:140rpx;
  font-size:26rpx;
  color: #666;
  text-align: center;
}
.search-box .search{
  flex: 1;
  padding-left: 20rpx;
  background: #eee;
  display: flex;
  align-items: center;
}
.search-box .search image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}
.search-box .search input{
  font-size: 24rpx;
  border: 0;
  outline: 0;
}
/*goods*/
.goodswrap{
  width: 100%;
  height: 100%;
  display: flex;
  overflow: hidden;
  flex-direction: row;
  background: #eee;
}
.goodswrap .noGoods{
  font-size: 24rpx;
  font-weight: 500;
  line-height: 40rpx;
  padding-left: 20rpx;
  padding-top: 100rpx;
}
.goodswrap .menu{
  width:120rpx;
  font-size:26rpx;
  color: #666;
  overflow-y: auto;
  overflow-x:hidden;
  text-align: center;
}
.goodswrap .menu .menu-item{
  line-height: 40rpx;
  padding: 10rpx 30rpx;
  background: #fff;
  position: relative;
}
.goodswrap .goods{
  flex: 1;
  height: 100%;
  overflow-y:auto; 
  overflow-x: hidden;
  position: relative;
  
}
.goodswrap .goods:after{
  content: "";
  display: inline-block;
  width: 1px;
  height: 100%;
  position: absolute;
  bottom: 0;
  left:0;
  background: #eee;
  transform: scaleX(0.5);
}
.goodswrap .goods .box .typename{
  display:block;
  line-height: 2.7em;
  padding:0 0.7em;
  color:#333;
  font-size: 0.85em;
  background: #F4F5F7;
  position: relative;
}

.goodswrap .goods .box .good-box{
  padding: 20rpx 20rpx 0 20rpx;
}
.goodswrap .goods .box .good{
  border-radius: 20rpx;
  box-shadow: 3rpx 3rpx 2rpx #888888;
  position: relative;
  background: #ffffff;
  overflow: hidden;
  padding: 10rpx;
}
.goodswrap .goods .box .good:after{
  content: "";
  display: inline-block;
  width: 100%;
  height: 1px;
  position: absolute;
  bottom: 0;
  left:0;
  background: #eee;
  transform: scaleY(0.5);
}
.goodswrap .goods .box .good .title{
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  margin: 10rpx 0;
  color:#333;
  text-align: right;
}
.goodswrap .goods .box .good .desc{
  display: flex;
}
.goodswrap .goods .box .good .desc image{
  width: 200rpx;
  height: 200rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.goodswrap .goods .box .good .desc .priceact{
  flex: 1;
  font-size: 26rpx;
  line-height: 30rpx;
  text-align: right;
}
.goodswrap .goods .box .good .desc .priceact .price{
  font-size: 28rpx;
  color:#EF0A11;
  font-weight: 600;
  text-align: right;
}
.goodswrap .goods .box .good .desc .priceact .price label{
  font-size: 1em;
}
.goodswrap .goods .box .good .desc .priceact image{
  width: 34rpx;
  height: 34rpx;
  margin-right:0rpx;
}
.goodswrap .goods .box .good .desc .priceact .operation{
  display: flex;
}
.goodswrap .goods .box .good .desc .priceact .operation .operation-left{
  flex: 1;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
}
.goodswrap .goods .box .good .desc .priceact .operation .operation-right{
  width: 150rpx;
  height: 50rpx;
  text-align: left;
  font-size: 26rpx;
  display: flex;
  align-items: center;
}
.goodswrap .goods .box .good .desc .priceact .operation .operation-right navigator{
  display: flex;
  align-items: center;
}
.goodswrap .goods .box .good .desc .priceact .operation .operation-right .num-view{
  margin: 0;
  padding:0 10rpx;
}